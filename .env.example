# Sentence Window Configuration
SENTENCE_WINDOW_SIZE=3

# Auto-Merging Configuration
AUTO_MERGE_CHUNK_SIZES=2048,512,128

# Evaluation
EVAL_DATASET_PATH=data/eval_questions.json
NUM_EVAL_QUESTIONS=20

# Streamlit
STREAMLIT_PORT=8501